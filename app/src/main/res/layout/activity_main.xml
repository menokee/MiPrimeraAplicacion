<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" android:backgroundTint="@color/colorPrimary">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/saludo" android:textColor="@color/colorAccent"
            android:textStyle="bold" android:textSize="24sp" app:layout_constraintVertical_bias="0.48"
    />

    <Button
            android:text="Presionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnA"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="156dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/saludo" android:layout_marginBottom="297dp"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>

    <ImageView
            android:layout_width="77dp"
            android:layout_height="73dp" app:srcCompat="@mipmap/ic_cea"
            android:id="@+id/imageView3" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/saludo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="167dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="266dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="167dp"/>

</android.support.constraint.ConstraintLayout>